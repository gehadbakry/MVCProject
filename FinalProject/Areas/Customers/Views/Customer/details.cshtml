}
@model FinalProject.Models.Item
     <div class="page-heading products-heading header-text">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="text-content">
              <h4>new arrivals</h4>
              <h2>sixteen products</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div>
      <br />
    </div>
    <div class="container-fluid pb-5">
        <div class="row px-xl-5">
            <div class="col-lg-5 mb-30">
               
                        <div >
                            <img class="w-100 h-100" src="~/images/@Model.Photopath" alt="Image">
                        </div>        
            </div>

            <div class="col-lg-7 h-auto mb-30">
                <div class="h-100 bg-light p-30">
            
                    <h3>@Model.Name</h3>
                  
                    <h3 class="font-weight-semi-bold mb-4">$@Model.Price</h3>
                    <p class="mb-4">@Model.Description</p>
                  @for(int i=0;i<@Model.Details.Split("/").Count();i++)
                   { <div class="d-flex mb-3">
                        <strong class="text-dark mr-3">@Model.Details.Split("/")[i].Split(":")[0]</strong>
                         <form>
                        @for(int j=0;j<@Model.Details.Split("/")[i].Split(":")[1].Split(",").Count();j++)
                           {
           
                               <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="@Model.Details.Split("/")[i].Split(":")[0]-@i" name="@Model.Details.Split("/")[i].Split(":")[0]">
                                <label class="custom-control-label" for="@Model.Details.Split("/")[i].Split(":")[0]-@i">@Model.Details.Split("/")[i].Split(":")[1].Split(",")[j]</label>
                            </div>
                           
                        }
                </form>


                        <br>
                    </div>
                    }
                   
                    <div class="d-flex align-items-center mb-4 pt-2">
                        <div class="input-group quantity mr-3" style="width: 130px;">
                            <div class="input-group-btn">
                                <button class="btn btn-primary btn-minus" id="bt">
                                   <b>-</b>
                                </button>
                            </div>
                            <div class="input-group-btn">
                                <button class="btn btn-primary btn-plus" id="bt">
                                    <b>+</b>
                                </button>
                            </div>
                         <form asp-area="Customers" asp-controller="Customer" asp-action="details" asp-route-id="@Model.ID">      
                            <input type="text" class="form-control bg-secondary border-0 text-center quantity" name="num" value="1">
        <button type="submit" id="btnSubmit" class="btn btn-primary px-3 " >Add To Cart</button>
                         </form>
                        </div>
                        
    
                          @if(mes != null)
     {  
        <div class="alert alert-success" role="alert">
 Added Successfully!
</div>
     }
                    </div>
       
        </div>
        </div>
        </div>
        </div>
      <div class="latest-products">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="section-heading">
              <h2>Categories</h2>
             
            </div>
          </div>
          </div>
          </div>
       <div class="services">
      <div class="container">
        <div class="row">
            @foreach(var item in Cats)
        {  <div class="col-md-4">
            <div class="service-item">
              <div class="icon" width="a">
                <img src="~/images/@item.Photo"  class="rounded-circle"  width="200px"/>
              </div>
              <div class="down-content">
                <h4>@item.Name</h4>
                <p>@item.Description</p>
                <a href="~/Customers/Customer/Catproducts/@item.ID" class="filled-button">Show Items</a>
              </div>
            </div>
          </div>
          }
           </div>
      </div>
    </div>
    </div>
